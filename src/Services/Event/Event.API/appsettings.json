{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=BlockTicket_Event;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379",
    "RabbitMQ": "amqp://guest:guest@localhost:5672/"
  },
  "Jwt": {
    "Key": "BlockTicket-Production-Secret-Key-2024-Must-Be-Changed-In-Production-Environment-32-Characters",
    "Issuer": "BlockTicket.EventService",
    "Audience": "BlockTicket.Clients"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/event-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Port": 5672
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "KeyPrefix": "event:",
    "DefaultTTL": "00:05:00"
  },
  "Cache": {
    "CatalogTTL": "00:00:30",
    "SeatMapTTL": "00:05:00",
    "AvailabilityTTL": "00:00:10",
    "PricingTTL": "00:01:00",
    "SearchResultsTTL": "00:00:30"
  },
  "EventService": {
    "MaxEventsPerPage": 50,
    "DefaultReservationTTL": "00:10:00",
    "MaxReservationExtensions": 2,
    "SeatLockDuration": "00:10:00",
    "EnableDynamicPricing": false,
    "EnableSeatMapCaching": true,
    "EnableSearchCaching": true
  },
  "RateLimiting": {
    "IsEnabled": true,
    "GlobalLimit": 5000,
    "PerIpLimit": 500,
    "WindowSizeInMinutes": 1
  },
  "SecurityHeaders": {
    "EnableHsts": true,
    "EnableContentSecurityPolicy": true,
    "EnableXFrameOptions": true,
    "EnableXContentTypeOptions": true
  },
  "Security": {
    "RequireHttps": true,
    "EnableCors": true,
    "AllowedOrigins": ["http://localhost:3000", "https://localhost:3000"],
    "JwtSettings": {
      "Issuer": "BlockTicket.EventService",
      "Audience": "BlockTicket.Clients",
      "SecretKey": "your-secret-key-here-change-in-production",
      "TokenLifetime": "01:00:00"
    }
  },
  "HealthChecks": {
    "UI": {
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },
  "AllowedHosts": "*"
}
