{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=BlockTicket_Identity;Username=postgres;Password=postgres;Port=5432;",
    "Redis": "localhost:6379"
  },
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Audience": "blockticket-api"
  },
  "OpenIddict": {
    "TokenLifetimes": {
      "AccessToken": 60,
      "RefreshToken": 43200,
      "IdentityToken": 15
    },
    "Certificates": {
      "SigningCertificatePath": "",
      "SigningCertificatePassword": "",
      "EncryptionCertificatePath": "",
      "EncryptionCertificatePassword": ""
    }
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "ndtuyen0604@gmail.com",
    "SmtpPassword": "ymlezbixyikuaroi",
    "FromEmail": "ndtuyen0604@gmail.com",
    "FromName": "BlockTicket"
  },
  "Application": {
    "BaseUrl": "https://localhost3000",
    "EmailConfirmationPath": "/confirm-email",
    "PasswordResetPath": "/reset-password"
  },
  "Sms": {
    "TwilioAccountSid": "",
    "TwilioAuthToken": "",
    "TwilioPhoneNumber": ""
  },
  "JWT": {
    "SecretKey": "your-super-secret-jwt-key-here-make-it-long-and-random-for-development-only",
    "Issuer": "BlockTicket.Identity",
    "Audience": "BlockTicket.Api",
    "ExpirationMinutes": 60
  },
  "Security": {
    "PasswordHashingIterations": 100000,
    "JwtSecretKey": "your-super-secret-jwt-key-here-make-it-long-and-random",
    "EncryptionKey": "your-encryption-key-32-characters",
    "RequireEmailConfirmation": true,
    "RequirePhoneConfirmation": false,
    "DefaultMfaEnabled": false,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "MaxConcurrentSessions": 5,
    "SessionLimitBehavior": "RevokeOldest",
    "PasswordHistoryCount": 5,
    "EnablePasswordHistory": true,
    "PasswordHistoryRetentionDays": 365
  },
  "RateLimiting": {
    "AuthEndpoints": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    },
    "MfaEndpoints": {
      "PermitLimit": 5,
      "WindowMinutes": 1
    },
    "AdminEndpoints": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    }
  },
  "Notifications": {
    "Discord": {
      "DefaultWebhookUrl": "",
      "CriticalWebhookUrl": ""
    },
    "SecurityEvents": {
      "Enabled": true,
      "Channels": [
        {
          "Name": "default-discord",
          "Type": "discord",
          "Target": "default-webhook",
          "Severities": ["Medium", "High", "Critical"],
          "EventTypes": ["*"],
          "Enabled": true
        },
        {
          "Name": "critical-discord",
          "Type": "discord",
          "Target": "critical-webhook",
          "Severities": ["Critical"],
          "EventTypes": ["*"],
          "Enabled": true
        }
      ],
      "Rules": [
        {
          "Name": "critical-events",
          "EventTypes": ["*"],
          "Severities": ["Critical"],
          "Channels": ["critical-discord"],
          "Enabled": true
        },
        {
          "Name": "high-medium-events",
          "EventTypes": ["*"],
          "Severities": ["High", "Medium"],
          "Channels": ["default-discord"],
          "Enabled": true
        }
      ],
      "Throttling": {
        "Enabled": true,
        "Window": "00:05:00",
        "MaxNotifications": 10,
        "PerEventTypeLimits": {
          "LOGIN_FAILURE": 5,
          "ACCOUNT_LOCKED": 3,
          "SUSPICIOUS_LOGIN": 8
        }
      }
    },
    "DailySummaryTime": "09:00"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://blockticket.com",
      "https://app.blockticket.com"
    ]
  },
  "HealthChecks": {
    "UI": {
      "Enabled": true,
      "Path": "/health-ui"
    }
  },
  "AllowedHosts": "*"
}
